---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">

  {%- comment -%}
  Sitemap optimized for SEO and AI crawler discovery
  Priority scale: 1.0 (highest) to 0.1 (lowest)
  Changefreq: always, hourly, daily, weekly, monthly, yearly, never
  {%- endcomment -%}

  {%- comment -%} Homepage - Highest priority {%- endcomment -%}
  <url>
    <loc>{{ site.url }}/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>

  {%- comment -%} Key service pages - Very high priority {%- endcomment -%}
  {%- assign high_priority_pages = "solutions,use-cases" | split: "," -%}
  {%- for page in site.pages -%}
    {%- assign page_name = page.url | remove: "/" | remove: ".html" -%}
    {%- if high_priority_pages contains page_name -%}
      <url>
        <loc>{{ site.url }}{{ page.url }}</loc>
        <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.9</priority>
      </url>
    {%- endif -%}
  {%- endfor -%}

  {%- comment -%} Important pages - High priority {%- endcomment -%}
  {%- assign important_pages = "about,contact,blog" | split: "," -%}
  {%- for page in site.pages -%}
    {%- assign page_name = page.url | remove: "/" | remove: ".html" -%}
    {%- if important_pages contains page_name -%}
      <url>
        <loc>{{ site.url }}{{ page.url }}</loc>
        <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
        {%- if page_name == "blog" -%}
        <changefreq>weekly</changefreq>
        {%- else -%}
        <changefreq>monthly</changefreq>
        {%- endif -%}
        <priority>0.8</priority>
      </url>
    {%- endif -%}
  {%- endfor -%}

  {%- comment -%} Supporting pages - Medium priority {%- endcomment -%}
  {%- assign medium_pages = "faq" | split: "," -%}
  {%- for page in site.pages -%}
    {%- assign page_name = page.url | remove: "/" | remove: ".html" -%}
    {%- if medium_pages contains page_name -%}
      <url>
        <loc>{{ site.url }}{{ page.url }}</loc>
        <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.7</priority>
      </url>
    {%- endif -%}
  {%- endfor -%}

  {%- comment -%} Other pages not in predefined categories {%- endcomment -%}
  {%- assign all_categorized = "solutions,use-cases,about,contact,blog,faq," | split: "," -%}
  {%- for page in site.pages -%}
    {%- assign page_name = page.url | remove: "/" | remove: ".html" -%}
    {%- unless all_categorized contains page_name or page.url == "/404.html" or page.url == "/" or page.url contains "sitemap" or page.url contains "feed" or page.url contains "robots" or page.url contains "llms" -%}
      <url>
        <loc>{{ site.url }}{{ page.url }}</loc>
        <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.5</priority>
      </url>
    {%- endunless -%}
  {%- endfor -%}

  {%- comment -%} Blog posts - Standard priority, sorted by date (newest first) {%- endcomment -%}
  {%- for post in site.posts -%}
    <url>
      <loc>{{ site.url }}{{ post.url }}</loc>
      <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
      <changefreq>yearly</changefreq>
      <priority>0.6</priority>
    </url>
  {%- endfor -%}

</urlset>
